@namespace Microsoft.FluentUI.AspNetCore.Components

@if (Visible)
{
    <div class="@ClassValue"
         style="@StyleValue"
         @onclick="@OnCloseHandlerAsync" 
         @oncontextmenu="@OnCloseHandlerAsync" 
         @oncontextmenu:preventDefault>
        <div style="@( $"display: flex; align-items:{Alignment.GetDisplayName()}; justify-content: {Justification.GetDisplayName()}; width: 100%; height: 100%")">
            @ChildContent
        </div>
    </div>
}

@namespace Microsoft.FluentUI.AspNetCore.Components

@inherits FilterBase<TItem>

@typeparam TItem
@typeparam TProp

@code
{
    public override RenderFragment Render(DataFilterDescriptorCondition<TItem> condition) => __builder =>
    {
        @RenderOperator(condition)

        @if (TemplateFilter != null)
        {
            @TemplateFilter(condition)
        }
        else 
        {
            @RenderTypes(condition)
        }
    };
}
